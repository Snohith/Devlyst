# App Configuration
# Used for metadata, OG images, and origin validation
NEXT_PUBLIC_APP_URL=http://localhost:3000

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:1234
NEXT_PUBLIC_WS_HOST=localhost
NEXT_PUBLIC_WS_PORT=1234

# Clerk Authentication (Required)
# Get your keys from https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=


# Server Configuration (Optional for custom deployments)
PORT=1234

# Sentry Error Monitoring (Optional but recommended for production)
# Get your DSN from https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_DSN=

# Analytics (Optional - Plausible is privacy-focused and GDPR compliant)
# Set to your domain (e.g., devlyst.com) to enable analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=
